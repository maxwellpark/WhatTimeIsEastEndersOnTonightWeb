<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WhatTimeIsEastEndersOnTonight</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WhatTimeIsEastEndersOnTonight.styles.css" asp-append-version="true" />
    <link runat="server" rel="icon" href="~/favicon.ico" type="image/x-icon" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">What Time Is EastEnders On Tonight?</a><span class="date-text">@DateTime.Now.ToString("dd'/'MM'/'yyyy")</span>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="footer page-footer border-top text-muted font-small mdb-color darken-3 pt-4" style="position: fixed;">
        @{
            var year = DateTime.Now.Year;
        }
        <div class="footer-copyright text-center py-3">
            &copy; @year - WhatTimeIsEastEndersOnTonight - Max - <a target="_blank" href="https://github.com/maxwellpark/WhatTimeIsEastEndersOnTonightWeb">See code on GitHub</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
